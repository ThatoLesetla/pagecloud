@model PageCloud.View_Models.LoginView

@{
    ViewBag.Title = "Login";
    Layout = null;
}

@Styles.Render("~/Content/css")

<div class="log-w3">
    <div class="w3layouts-main">
        <h2>Sign In Now</h2>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <input type="email" class="ggg" name="Email" placeholder="Enter E-Mail" required="">
            <input type="password" class="ggg" name="Password" placeholder="Enter Password" required="">
            @*<span><input type="checkbox" />Remember Me</span>*@
            @Html.ValidationMessage("InvalidLogin")
            <h6><a href="#">Forgot Password?</a></h6>
            <div class="clearfix"></div>
            <input type="submit" value="Sign In" name="login">
        }

        <p>Don't Have an Account ?<a href="/Users/Create">Create an account</a></p>
    </div>
</div>
